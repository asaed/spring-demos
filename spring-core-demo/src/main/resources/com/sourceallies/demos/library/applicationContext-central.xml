<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--central library -->
    <bean id="centralLibrary"
          class="com.sourceallies.demos.library.factories.LibraryServiceFactory"
          factory-method="createLibrary"
    >
        <constructor-arg name="libraryBasePath" value="central"/>
    </bean>

    <bean id="centralBookRepository"
          class="com.sourceallies.demos.library.factories.BookRepositoryFactory"
          factory-method="createSimpleBookRepository"
    >
        <constructor-arg name="libraryBasePath" value="central"/>
    </bean>

    <bean id="centralAuthorRepository"
          class="com.sourceallies.demos.library.repositories.simple.SimpleAuthorRepository"
    >
        <constructor-arg name="bookRepository" ref="centralBookRepository"/>
    </bean>

    <bean id="centralLibraryService"
          class="com.sourceallies.demos.library.repositories.simple.SimpleLibraryService"
    >
        <constructor-arg name="library" ref="centralLibrary"/>
        <constructor-arg name="authorRepository" ref="centralAuthorRepository"/>
        <constructor-arg name="bookRepository" ref="centralBookRepository"/>
    </bean>
</beans>