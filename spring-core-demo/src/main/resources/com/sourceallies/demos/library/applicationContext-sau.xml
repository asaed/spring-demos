<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--sau library -->
    <!--<bean id="sauLibrary" class="com.sourceallies.demos.library.factories.LibraryServiceFactory" factory-method="createLibrary">-->
        <!--<constructor-arg name="libraryBasePath" value="sau"/>-->
    <!--</bean>-->

    <bean id="libraryDataLoader" class="com.sourceallies.demos.library.loader.LibraryDataLoader"/>

    <bean id="sauLibrary" factory-bean="libraryDataLoader" factory-method="loadLibrary">
        <constructor-arg name="libraryBasePath" value="sau"/>
    </bean>

    <!--<bean id="sauBookRepository" class="com.sourceallies.demos.library.factories.BookRepositoryFactory" factory-method="createSimpleBookRepository">-->
        <!--<constructor-arg name="libraryBasePath" value="sau"/>-->
    <!--</bean>-->

    <bean id="sauBooks" factory-bean="libraryDataLoader" factory-method="loadBooks">
        <constructor-arg name="libraryBasePath" value="sau"/>
    </bean>

    <bean id="sauBookRepository" class="com.sourceallies.demos.library.repositories.simple.SimpleBookRepository">
        <constructor-arg name="books" ref="sauBooks"/>
    </bean>

    <bean id="sauAuthorRepository" class="com.sourceallies.demos.library.repositories.simple.SimpleAuthorRepository">
        <constructor-arg name="bookRepository" ref="sauBookRepository"/>
    </bean>

    <bean id="sauLibraryService" class="com.sourceallies.demos.library.repositories.simple.SimpleLibraryService">
        <constructor-arg name="library" ref="sauLibrary"/>
        <constructor-arg name="authorRepository" ref="sauAuthorRepository"/>
        <constructor-arg name="bookRepository" ref="sauBookRepository"/>
    </bean>
</beans>